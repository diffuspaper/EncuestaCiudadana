<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="@drawable/background"
    tools:context="diffusvio.encuestaciudadana.Information">
    <TextView
        android:text="@string/name_encuestado"
        android:layout_width="match_parent"
        android:textColor="@color/colorTexto"
        android:textSize="10pt"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/edtEncuestado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginTop="10dp"
        android:text="@string/edad"
        android:layout_width="match_parent"
        android:textColor="@color/colorTexto"
        android:textSize="10pt"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_height="wrap_content" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberSigned"
        android:ems="10"
        android:id="@+id/edtEdad" />
    <TextView
        android:layout_marginTop="10dp"
        android:text="@string/sexo_contacto"
        android:layout_width="match_parent"
        android:textColor="@color/colorTexto"
        android:textSize="10pt"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_height="wrap_content" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinnerSexo"
        android:textColor="@color/colorTexto"
        android:textSize="10pt"
        android:layout_gravity="center_horizontal"
        android:spinnerMode="dropdown" />
    <TextView
        android:layout_marginTop="10dp"
        android:text="@string/partido"
        android:layout_width="match_parent"
        android:textColor="@color/colorTexto"
        android:textSize="10pt"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_height="wrap_content" />
    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinnerPartidos"
        android:textColor="@color/colorTexto"
        android:textSize="10pt"
        android:layout_gravity="center_horizontal"
        android:spinnerMode="dropdown" />
    <Button
        android:id="@+id/btnContinuar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorTexto"
        android:layout_marginTop="37dp"
        android:onClick="continuar"
        android:text="@string/continuar" />
</LinearLayout>
