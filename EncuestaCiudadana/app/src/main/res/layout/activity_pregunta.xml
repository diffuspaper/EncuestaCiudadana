<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="@color/fondoGen"
    tools:context="diffusvio.encuestaciudadana.PreguntaActivity">

    <TextView
        android:id="@+id/lblPregunta"
        android:text="Hola mi nombre es andres"
        android:gravity="left|right"
        android:textSize="14sp"
        android:textColor="@color/colorTexto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
   <ScrollView
       android:layout_width="match_parent"
       android:layout_marginTop="10dp"
       android:layout_weight="1"
       android:layout_height="wrap_content">
           <LinearLayout
               android:orientation="vertical"
               android:layout_width="match_parent"
               android:id="@+id/viewRespuestas"
               android:layout_height="wrap_content" >
            </LinearLayout>
   </ScrollView>
    <Button
        android:layout_gravity="bottom"
        android:textSize="12sp"
        android:id="@+id/btnSiguiente"
        android:text="@string/btn_siguiente"
        android:textColor="@color/colorTextoButton"
        android:background="@color/colorButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:layout_gravity="bottom"
        android:textSize="12sp"
        android:id="@+id/btnFinish"
        android:text="@string/btn_finalizar"
        android:textColor="@color/colorTextoButton"
        android:background="@color/colorButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>
