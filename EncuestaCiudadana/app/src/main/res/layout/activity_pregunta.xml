<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="@color/fondoGen"
    tools:context="diffusvio.encuestaciudadana.PreguntaActivity">
    <fragment
        android:id="@+id/fragment_pregunta"
        android:name="diffusvio.encuestaciudadana.PreguntaFragment"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="match_parent"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_gravity="bottom"
            android:textSize="12sp"
            android:id="@+id/btnAtras"
            android:text="@string/btn_atras"
            android:textColor="@color/colorTextoButton"
            android:background="@color/colorButton"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <Button
            android:layout_gravity="bottom"
            android:textSize="12sp"
            android:id="@+id/btnSiguiente"
            android:text="@string/btn_siguiente"
            android:layout_marginLeft="10px"
            android:textColor="@color/colorTextoButton"
            android:background="@color/colorButton"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>
